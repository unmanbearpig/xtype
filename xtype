		out="¢"
		;;
	alpha)
		out="α"
		;;
	beta)
		out="β"
		;;
	gamma)
		out="γ"
		;;
	Gamma)
		out="Γ"
		;;
	delta)
		out="δ"
		;;
	Delta)
		out="Δ"
		;;
	epsilon)
		out="ε"
		;;
	Epsilon)
		out="Ε"
		;;
	zeta)
		out="ζ"
		;;
	Zeta)
		out="Ζ"
		;;
	eta)
		out="η"
		;;
	Eta)
		out="Η"
		;;
	theta)
		out="θ"
		;;
	Theta)
		out="Θ"
		;;
	iota)
		out="ι"
		;;
	Iota)
		out="Ι"
		;;
	kappa)
		out="κ"
		;;
	Kappa)
		out="Κ"
		;;
	lambda)
		out="λ"
