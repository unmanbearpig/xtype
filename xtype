#!/bin/sh

set -e

function print_help {
	echo "
xtype  - types weird characters into the current X window

xtype CHAR_NAME

CHAR_NAME:
	¨  - uml | umlaut
	ä  - auml | aumlaut
	Ä  - Auml | Aumlaut
	ö  - ouml | oumlaut
	Ö  - Ouml | Oumlaut
	ü  - uuml | uumlaut
	Ü  - Uuml | Uumlaut
	ÿ  - yuml | yumlaut
	Ÿ  - Yuml | Yumlaut
	ß  - eszett | eszet | ss
	ẞ  - Eszett | Eszet | SS
	€  - eur | euro
	₽  - rub | rur
	£  - gbp | pound
	¢  - cent
	α  - alpha
	β  - beta
	γ  - gamma
	Γ  - Gamma
	δ  - delta
	Δ  - Delta
	ε  - epsilon
	Ε  - Epsilon
	ζ  - zeta
	Ζ  - Zeta
	η  - eta
	Η  - Eta
	θ  - theta
	Θ  - Theta
	ι  - iota
	Ι  - Iota
	κ  - kappa
	Κ  - Kappa
	λ  - lambda
	Λ  - Lambda
	μ  - mu
	Μ  - Mu
	ν  - nu
	Ν  - Nu
	ν  - xi
	Ν  - Xi
	ο  - omicron
	Ο  - Omicron
	π  - pi
	Π  - Pi
	ρ  - rho
	Ρ  - Rho
	ς  - sigma
	Σ  - Sigma
	τ  - tau
	Τ  - Tau
	υ  - upsilon
	Υ  - Upsilon
	φ  - phi
	Φ  - Phi
	χ  - chi
	Χ  - Chi
	ψ  - psi
	Ψ  - Psi
	ω  - omega
	Ω  - Omega
	ℵ  - alef
	æ  - ae | aelig
	♭  - flat
	♯  - sharp
	✓  - check
	✗  - cross
	µ  - micro
	—  - mdash
	–  - ndash
	‐  - hyphen | hyph
	¬  - not
	   - nbsp
	±  - +-
	≤  - <= | geq
	≥  - >= | leq
	≠  - != | neq
	≈  - almost | =~ | ~= | asymp
	≶  - lg
	∀  - forall
	∃  - exists | exist | there_exists
	∿  - sine | acd
	∫  - int | integral
	∬  - Int | dint
	∭  - iiint | tint
	⌀  - diameter
	°  - deg | dergee
	∅  - empty
	∈  - isin
	∉  - notin
	⊂  - sub
	⊃  - sup
	⌈  - lceil
	⌉  - rceil
	⌊  - lfloor
	⌋  - rfloor
	∑  - sum
	∗  - lowast
	∝  - prop | proportional_to
	∟  - angrt
	∠  - ang
	∡  - angmsd
	∥  - parallel
	∦  - npar
	∧  - and
	∨  - or
	∩  - cap | intersection
	∪  - cup | union
	∏  - prod
	√  - sqrt
	♲  - recycle
	∞  - inf | infinity
	↑  - up
	↓  - down
	™  - tm
	§  - section
	§  - division
	…  - ellipsis | hellip
	′  - prime
	″  - Prime | dprime
	‴  - tprime
	‵  - bprime
	⁗  - qprime
	ƒ  - fnof | func
	‽  - interrobang
	¶  - pilcrow | para
	⁋  - rpilcrow
	•  - bullet | bull
	⁃  - hybull | hyphen_bullet
	¦  - brvbar
	⁰  - sup0
	¹  - sup1
	²  - sup2
	³  - sup3
	⁴  - sup4
	⁵  - sup5
	⁶  - sup6
	⁷  - sup7
	⁸  - sup8
	⁹  - sup9
"
}

out=""
case $1 in
	help | --help)
		print_help;
		exit 0;
		;;
	uml | umlaut)
		out="¨"
		;;
	auml | aumlaut)
		out="ä"
		;;
	Auml | Aumlaut)
		out="Ä"
		;;
