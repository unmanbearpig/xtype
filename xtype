		out="∧"
		;;
	or)
		out="∨"
		;;
	cap | intersection)
		out="∩"
		;;
	cup | union)
		out="∪"
		;;
	prod)
		out="∏"
		;;
	sqrt)
		out="√"
		;;
	recycle)
		out="♲"
		;;
