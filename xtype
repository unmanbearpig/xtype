	Lambda)
		out="Λ"
		;;
	mu)
		out="μ"
		;;
	Mu)
		out="Μ"
		;;
	nu)
		out="ν"
		;;
	Nu)
		out="Ν"
		;;
	xi)
		out="ν"
		;;
	Xi)
		out="Ν"
		;;
	omicron)
		out="ο"
		;;
	Omicron)
		out="Ο"
		;;
	pi)
		out="π"
		;;
	Pi)
		out="Π"
		;;
	rho)
		out="ρ"
		;;
	Rho)
		out="Ρ"
		;;
	sigma)
		out="ς"
		;;
	Sigma)
		out="Σ"
		;;
	tau)
		out="τ"
		;;
	Tau)
		out="Τ"
		;;
	upsilon)
		out="υ"
		;;
	Upsilon)
		out="Υ"
		;;
	phi)
		out="φ"
		;;
	Phi)
		out="Φ"
		;;
	chi)
		out="χ"
		;;
	Chi)
		out="Χ"
		;;
	psi)
		out="ψ"
		;;
	Psi)
		out="Ψ"
		;;
	omega)
		out="ω"
		;;
	Omega)
		out="Ω"
		;;
	alef)
		out="ℵ"
		;;
	ae | aelig)
		out="æ"
		;;
	flat)
		out="♭"
		;;
	sharp)
		out="♯"
		;;
	check)
		out="✓"
		;;
	cross)
		out="✗"
		;;
	micro)
		out="µ"
		;;
	mdash)
		out="—"
		;;
	ndash)
		out="–"
		;;
	hyphen | hyph)
		out="‐"
		;;
	not)
		out="¬"
		;;
	nbsp)
		out=" "
		;;
	"+-")
		out="±"
		;;
	"<=" | geq)
		out="≤"
		;;
	">=" | leq)
		out="≥"
		;;
	!= | neq)
		out="≠"
		;;
	almost | =~ | ~= | asymp)
		out="≈"
		;;
	lg)
		out="≶"
		;;
	forall)
		out="∀"
		;;
	exists | exist | there_exists)
		out="∃"
		;;
	sine | acd)
		out="∿"
		;;
	int | integral)
		out="∫"
		;;
	Int | dint)
		out="∬"
		;;
	iiint | tint)
		out="∭"
		;;
	diameter)
		out="⌀"
		;;
	deg | dergee)
		out="°"
		;;
	empty)
		out="∅"
		;;
	isin)
		out="∈"
		;;
	notin)
		out="∉"
		;;
	sub)
		out="⊂"
		;;
	sup)
		out="⊃"
		;;
	lceil)
		out="⌈"
		;;
	rceil)
		out="⌉"
		;;
	lfloor)
		out="⌊"
		;;
	rfloor)
		out="⌋"
		;;
	sum)
		out="∑"
		;;
	lowast)
		out="∗"
		;;
	prop | proportional_to)
		out="∝"
		;;
	angrt)
		out="∟"
		;;
	ang)
		out="∠"
		;;
	angmsd)
		out="∡"
		;;
