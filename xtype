	prime)
		out="′"
		;;
	Prime | dprime)
		out="″"
		;;
	tprime)
		out="‴"
		;;
	bprime)
		out="‵"
		;;
	qprime)
		out="⁗"
		;;
	fnof | func)
		out="ƒ"
		;;
	interrobang)
		out="‽"
		;;
	pilcrow | para)
		out="¶"
		;;
	rpilcrow)
		out="⁋"
		;;
	bullet | bull)
		out="•"
		;;
	hybull | hyphen_bullet)
		out="⁃"
		;;
	brvbar)
		out="¦"
		;;
	sup0)
		out="⁰"
		;;
	sup1)
		out="¹"
		;;
	sup2)
		out="²"
		;;
	sup3)
		out="³"
		;;
	sup4)
		out="⁴"
		;;
	sup5)
		out="⁵"
		;;
	sup6)
		out="⁶"
		;;
	sup7)
		out="⁷"
		;;
	sup8)
		out="⁸"
		;;
	sup9)
		out="⁹"
		;;
esac

if [ "$out" == "" ]; then 
	echo "invalid argument $1
use \"help\" for list of characters and their names"
	exit 1
fi

# echo "$out"

xdotool type "$out"
